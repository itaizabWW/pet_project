<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Rating</th>
      <th>10bis</th>
      <th>Address</th>
      <th>Kosher</th>
      <th>Maxdevtime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.cuisine_id %></td>
        <td><%= restaurant.rating %></td>
        <td><%= restaurant.ten_bis %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.kosher %></td>
        <td><%= restaurant.max_delivery_time %></td>


        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<%= link_to 'New Restaurant', new_restaurant_path %>
<%= link_to 'Add Restaurants from csv', store_index_path, @restaurants.first.parse_csv('Restaurants-ALL.csv') %>
